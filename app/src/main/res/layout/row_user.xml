<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_container_item_root"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@android:drawable/btn_default"
    android:padding="4dp">

    <ImageView
        android:id="@+id/lbl_user_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/face0" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/lbl_user_image"
        android:layout_toRightOf="@+id/lbl_user_image">

        <TextView
            android:id="@+id/lbl_user_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Dana"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="3dp"
            android:text="052-8828770"
            android:textSize="20dp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/lbl_user_favorite"
        style="?android:attr/starStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_alignParentRight="true" />


</RelativeLayout>